<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContatacaoHospedagem"
             Title="Contratação de Hospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10">

        <!-- Título -->
        <Label Text="Cálculo Diária"
               FontFamily="Kalam"
               FontSize="50"
               TextColor="{StaticResource Primary}" />

        <!-- Quadro para entrada de dados -->
        <Frame Padding="10">
            <VerticalStackLayout>

                <!-- Quantidade de Adultos e Crianças -->
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*,*,2*">

                    <!-- Adultos -->
                    <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" />
                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_Adultos}" />
                    <Stepper x:Name="stp_Adultos"
                             Grid.Row="0" Grid.Column="2"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <!-- Crianças -->
                    <Label Grid.Row="1" Grid.Column="0" Text="Crianças:" />
                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_Criancas}" />
                    <Stepper x:Name="stp_Criancas"
                             Grid.Row="1" Grid.Column="2"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
                </Grid>

                <!-- Suíte -->
                <Label Text="Escolha sua Suíte" />
                <Picker x:Name="pck_quarto"
                        Title="Selecione sua Acomodação" />

                <!-- Período da Estadia -->
                <Frame Padding="10" Margin="10">
                    <VerticalStackLayout>
                        <Label Text="Período de Estadia" />

                        <HorizontalStackLayout>
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_checkin"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botão de Avançar -->
                <Button Text="Avançar" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>

